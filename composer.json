{
    "name": "arthurnacious/quarry",
    "description": "A minimal, modern PHP ORM with connection pooling",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Quarry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Quarry\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "bin": ["bin/quarry"],
    "scripts": {
        "test": "phpunit",
        "quarry": "php bin/quarry"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}